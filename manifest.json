{
    "manifest_version": 3,
    "name": "Keyword Monitor",
    "version": "1.0",
    "description": "Refreshes the page at a set interval and checks for a keyword.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  